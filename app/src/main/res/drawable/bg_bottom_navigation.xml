<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:centerColor="#f0f5f5" android:endColor="#adad85" android:startColor="#adad85" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:centerColor="#f0f5f5" android:endColor="#adad85" android:startColor="#adad85" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:centerColor="#ffffff" android:endColor="#e6ecff" android:startColor="#e6ecff" />
        </shape>

    </item>
</selector>