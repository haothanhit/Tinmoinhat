<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_save"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/bt_delete_save"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:background="@drawable/delete"/>

            <TextView
                android:id="@+id/txt_title_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_save"
                android:layout_toLeftOf="@id/bt_delete_save"
                android:layout_margin="5dp"
                android:lines="3"
                android:textSize="16dp"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:id="@+id/txt_source_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_save"
                android:layout_below="@+id/txt_title_save"
                android:layout_margin="5dp"
                android:textSize="14dp"
                android:textColor="#0c7d91"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>